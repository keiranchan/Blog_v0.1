<%- include header%>
<div class="collapse navbar-collapse" id="collapsedUl">
    <ul class=" nav navbar-nav navbar-right">
        <li><a href="/">首页</a></li>

        <% if (user) { %>
        <li><a href="/u/<%=user.name%>">MyBlog</a></li>
        <li><a href="/blog">Garden</a></li>
        <li class="active"><a title="发表" href="/post">管理</a></li>
        <li><a href="/logout" title="登出">登出</a></li>
        <% } else { %>
        <li><a title="登录" href="/login">登陆</a></li>
        <li class="status" ><a title="注册" href="/reg" style="color: white;background-color: #40D2B1;border-radius: 20px; ">注册</a></li>
        <% } %>
    </ul>
</div>
</div>
</nav>
<div class="post-page content-20">
    <div class="container">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">
                <form class="form-horizontal" method="post">
                    <div class="row">
                        <div class="col-sm-1"></div>
                        <div class="col-sm-9"><h1>Post</h1></div>
                        <div class="col-sm-2"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">标题</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="inputTitle" name="title" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">正文</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" name="post" rows="10" ></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-info">发表</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-sm-1"></div>
        </div>
    </div>
</div>

<%- include footer%>